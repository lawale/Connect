<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BackgroundColor="DodgerBlue"
             x:Class="Cmobile.Views.RecoverPasswordPage">
    <StackLayout VerticalOptions="Center" Padding="50,0,50,0">
        <Entry Placeholder="Email" PlaceholderColor="Gray" Keyboard="Email" HorizontalOptions="FillAndExpand" VerticalOptions="Center"/>
        <Button Text="Recover&#10;Password" HorizontalOptions="End" HeightRequest="65" BackgroundColor="#09DA5F" BorderRadius="25" VerticalOptions="Center" />
    </StackLayout>
</ContentPage>